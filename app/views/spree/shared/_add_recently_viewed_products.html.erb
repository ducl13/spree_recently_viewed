<div id="recently_viewed_container" class="recently_viewed_products_container" data-hook></div>
<script>
  $( document ).on('turbolinks:load', function() {
    $.ajax({
      url: Spree.pathFor("product_recently_viewed?product_id=" + <%= @product.id %>),
      success: (data) =>
        $("#recently_viewed_container").html(data)
    })
  });
</script>