<% cache cache_key_for_recently_viewed_products(products) do %>
<div  class="row row-cols-xl-4 row-cols-lg-4 row-cols-sm-2 no-gutters"  data-hook="homepage_products">
  <% products.each_with_index do |product, index| %>
    <%= render 'spree/shared/product', product: product, image_class: 'product-component-plp-image' %>
  <% end %>
</div>
<% end %>